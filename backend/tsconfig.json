{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",  // Compiled files go here
    "rootDir": "./src",  // All TypeScript files are inside src
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
